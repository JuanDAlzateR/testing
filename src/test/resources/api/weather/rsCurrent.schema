{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "lat": {
      "type": "string"
    },
    "lon": {
      "type": "string"
    },
    "elevation": {
      "type": "integer"
    },
    "timezone": {
      "type": "string"
    },
    "units": {
      "type": "string"
    },
    "current": {
      "type": "object",
      "properties": {
        "icon": {
          "type": "string"
        },
        "icon_num": {
          "type": "integer"
        },
        "summary": {
          "type": "string"
        },
        "temperature": {
          "type": "number"
        },
        "wind": {
          "type": "object",
          "properties": {
            "speed": {
              "type": "number"
            },
            "angle": {
              "type": "integer"
            },
            "dir": {
              "type": "string"
            }
          },
          "required": [
            "speed",
            "angle",
            "dir"
          ]
        },
        "precipitation": {
          "type": "object",
          "properties": {
            "total": {
              "type": "number"
            },
            "type": {
              "type": "string"
            }
          },
          "required": [
            "total",
            "type"
          ]
        },
        "cloud_cover": {
          "type": "integer"
        }
      },
      "required": [
        "icon",
        "icon_num",
        "summary",
        "temperature",
        "wind",
        "precipitation",
        "cloud_cover"
      ]
    },
    "hourly": {
      "type": "null"
    },
    "daily": {
      "type": "null"
    }
  },
  "required": [
    "lat",
    "lon",
    "elevation",
    "timezone",
    "units",
    "current",
    "hourly",
    "daily"
  ]
}